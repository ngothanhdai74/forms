                    "props": {
                        "disabled": true
                    }
                },
                {
                    "Name": "Created",
                    "Title": "Ngày tạo",
                    "Control": 1,
                    "Validations": {
                        "Formula": {
                            "Expression": "<%=(Created > new Date())%>",
                            "ErrorMessage": "Ngày tạo không được sau ngày hiện tại."
                        }
                    },
                    "props": {
                        "dateFormat": "dd/mm/yy",
                        "mask": "99/99/9999",
                        "showIcon": true,
                        "showButtonBar": true,
                        "monthNavigator": true,
                        "yearNavigator": true,
                        "yearRange": "2000:2030",
                        "disabled": true
                    }
                }
            ]
        },
        {
            "Name": "Row3",
            "Control": 92,
