            "Controls": [
                {
                    "Name": "DocumentRegisterID",
                    "Title": "Loại văn bản nội bộ",
                    "Control": 6,
                    "Request": {
                        "method": "get",
                        "endpoint": "edoc/dms/DocumentRegister/GetByStoreAndDefault?documentStoreId=4&isDefault=false",
                        "payload": {}
                    },
                    "Validations": {
                        "Required": true
                    },
                    "props": {
                        "optionLabel": "Name",
                        "optionValue": "Code",
                        "disabled": true
                    }
                },
                {
                    "Name": "DocLabel",
                    "Title": "Số, ký hiệu",
                    "Control": 10,
                    "Validations": {
                        "Required": true
                    },
                    "props": {
                        "disabled": true
                    }
                }
            ]
        },
        {
            "Name": "Row2",
            "Control": 92,
            "Controls": [
                {
                    "Name": "Editor",
