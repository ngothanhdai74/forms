                    "ValueTemplate": "<%=ID%>:#:#<%=roleName%>:#<%=userId%>:<%=orgCode%>:<%=code%>:<%=code%>:<%=isWorkqueue%>:<%=activityId%>:<%=roleName%>:<%=roleName%>:<%=nodeType%>",
                    "LabelTemplate": "<%=label%>",
                    "ItemTemplate": "<%=code%>|<%=label%>",
                    "SelectedItemTemplate": "<%=code%>",
                    "ExtLabelFieldName": "ReceiverName",
                    "Large": false,
                    "props": {
                        "field": "code|%label",
                        "multiple": true,
                        "forceSelection": true,
                        "autoHighlight": true,
                        "disabled": true
                    },
                    "Validations": {
                        "Required": true
                    }
                }
            ]
