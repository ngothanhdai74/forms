            "Name": "Row6",
            "Control": 92,
            "Controls": [
                {
                    "Name": "UrgentLevel",
                    "Title": "Độ khẩn",
                    "Control": 6,
                    "ExtField": "Name",
                    "ExtFieldName": "UrgentLevelName",
                    "Request": {
                        "method": "get",
                        "endpoint": "edoc/ctl/Catalog/GetByCategory/UrgentLevel",
                        "cache": {
                            "enable": true,
                            "maxAge": 60
                        }
                    },
                    "props": {
                        "optionLabel": "Name",
                        "optionValue": "Code",
                        "disabled": true
                    }
                },
                {
                    "Name": "DueDate",
                    "Title": "Hạn xử lý",
                    "Control": 1,
                    "Validations": {
                        "Formula": {
                            "Expression": "<%=(DueDate !== null && DueDate.setHours(1) <= Created.setHours(0))%>",
                            "ErrorMessage": "Hạn xử lý phải lớn hơn hoặc bằng ngày tạo"
                        }
                    },
                    "props": {
                        "dateFormat": "dd/mm/yy",
                        "showOnFocus": false,
                        "mask": "99/99/9999",
                        "showIcon": true,
                        "showButtonBar": true,
                        "monthNavigator": true,
                        "yearNavigator": true,
                        "yearRange": "2000:2030",
